<Page x:Class="NewBlueJayERPBrowser.ProjectProductivityReport"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NewBlueJayERPBrowser"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1000"
      Title="ProjectProductivityReport" Loaded="Page_Loaded">
    <Page.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#358AB1" />
            <Setter Property="Foreground" Value="#FFC9E0DC" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="FontFamily" Value="./#Segoe UI" />
            <Setter Property="SnapsToDevicePixels" Value="True" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="4" Background="{TemplateBinding Background}">
                            <Grid>
                                <Path x:Name="PathIcon" Width="0" Height="0" Stretch="Fill" Fill="#4C87B3" HorizontalAlignment="Left" Margin="17,0,0,0" Data="F1 M 30.0833,22.1667L 50.6665,37.6043L 50.6665,38.7918L 30.0833,53.8333L 30.0833,22.1667 Z "/>
                                <ContentPresenter x:Name="MyContentPresenter" Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" />
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF635B5B" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter TargetName="PathIcon" Property="Fill" Value="Black" />
                            </Trigger>
                            <Trigger Property="IsFocused" Value="true">
                                <Setter Property="Background" Value="#FF635B5B" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter TargetName="PathIcon" Property="Fill" Value="Black" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF981E2A" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="AliceBlue" Offset="0"/>
                <GradientStop Color="LightBlue" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Image x:Name="imgLogo" Grid.Row="0" Grid.Column="0" Source="logo.png" HorizontalAlignment="Center" VerticalAlignment="Top" Height="100"/>
        <Label x:Name="lblTitle" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4" VerticalAlignment="Center" Content="Project Productivity Report" HorizontalAlignment="Center" HorizontalContentAlignment="Center" FontSize="20" />
        <StackPanel HorizontalAlignment="Left" Grid.Column="0" Grid.Row="1" Grid.RowSpan="8" Width="200" Background="LightBlue">
            <Expander x:Name="expPrintReport" Header="Print Report" FontSize="16" Margin="10,0,0,0" Expanded="expPrintReport_Expanded" />
            <Expander x:Name="expResetWindow" Header="Reset Window" FontSize="16" Margin="10,0,0,0" Expanded="expResetWindow_Expanded" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" VerticalAlignment="Center" HorizontalAlignment="Center" >
            <Label x:Name="lblEnterProjectID" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Enter Project ID:" FontSize="16" Margin="0,0,10,0" />
            <TextBox x:Name="txtEnterProjectID" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" CharacterCasing="Upper"  Width="200" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Margin="0,0,10,0"/>
            <Button x:Name="btnFindProject" Content="Find Project" HorizontalAlignment="Center" VerticalAlignment="Center"  Height="40" Width="125" FontSize="16" Click="btnFindProject_Click"/>
        </StackPanel>
        <Label x:Name="lblProjectID" Content="Project ID:" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="16" Margin="0,0,10,0" />
        <TextBox x:Name="txtProjectID" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="LightGray" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Height="40" Width="150" IsReadOnly="True" Margin="0,0,10,0"/>
        <Label x:Name="lblBlueJayProjectID" Content="Blue Jay Project ID:" Grid.Row="2" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="16" Margin="0,0,10,0" />
        <TextBox x:Name="txtBluejayProjectID" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="LightGray" Grid.Row="2" Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Height="40" Width="150" IsReadOnly="True" Margin="0,0,10,0"/>
        <Label x:Name="lblProjectName" Grid.RowSpan="2" Content="Project Name:" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="16" Margin="0,0,10,0" />
        <TextBox x:Name="txtProjectName" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="LightGray" Grid.Row="3" Grid.RowSpan="2" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Height="90" Width="190" IsReadOnly="True" TextWrapping="Wrap" />
        <Label x:Name="lblCurrentStatus" Content="Current Status:" Grid.Row="3" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="16" Margin="0,0,10,0" />
        <TextBox x:Name="txtCurrentStatus" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="LightGray" Grid.Row="3" Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Height="40" Width="150" IsReadOnly="True" Margin="0,0,10,0"/>
        <Label x:Name="lblProjectManager" Content="Project Manager:" Grid.Row="4" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="16" Margin="0,0,10,0" />
        <TextBox x:Name="txtProjectManager" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="LightGray" Grid.Row="4" Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Height="40" Width="150" IsReadOnly="True" Margin="0,0,10,0"/>
        <Label x:Name="lblTotalHours" Content="Total Hours:" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="16" Margin="0,0,10,0" />
        <TextBox x:Name="txtTotalHours" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="LightGray" Grid.Row="5" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Height="40" Width="150" IsReadOnly="True" Margin="0,0,10,0"/>
        <Label x:Name="lblTotalCost" Content="Total Cost:" Grid.Row="5" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="16" Margin="0,0,10,0" />
        <TextBox x:Name="txtTotalCost" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="LightGray" Grid.Row="5" Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Height="40" Width="150" IsReadOnly="True" Margin="0,0,10,0"/>
        <DataGrid x:Name="dgProjectProductivityReport" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="4" Grid.RowSpan="3" HorizontalAlignment="Center" VerticalAlignment="Top" Width="800" AutoGenerateColumns="True" IsReadOnly="True" AlternationCount="1" RowBackground="AliceBlue" AlternatingRowBackground="LightBlue" />
    </Grid>
</Page>
