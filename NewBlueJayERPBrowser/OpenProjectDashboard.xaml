<Page x:Class="NewBlueJayERPBrowser.OpenProjectDashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:winformchart="clr-namespace:System.Windows.Forms.DataVisualization.Charting;assembly=System.Windows.Forms.DataVisualization"
      xmlns:wf="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NewBlueJayERPBrowser"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1200"
      Title="OpenProjectDashboard" Loaded="Page_Loaded">
    <Page.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#358AB1" />
            <Setter Property="Foreground" Value="#FFC9E0DC" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="FontFamily" Value="./#Segoe UI" />
            <Setter Property="SnapsToDevicePixels" Value="True" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="4" Background="{TemplateBinding Background}">
                            <Grid>
                                <Path x:Name="PathIcon" Width="0" Height="0" Stretch="Fill" Fill="#4C87B3" HorizontalAlignment="Left" Margin="17,0,0,0" Data="F1 M 30.0833,22.1667L 50.6665,37.6043L 50.6665,38.7918L 30.0833,53.8333L 30.0833,22.1667 Z "/>
                                <ContentPresenter x:Name="MyContentPresenter" Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" />
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF635B5B" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter TargetName="PathIcon" Property="Fill" Value="Black" />
                            </Trigger>
                            <Trigger Property="IsFocused" Value="true">
                                <Setter Property="Background" Value="#FF635B5B" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter TargetName="PathIcon" Property="Fill" Value="Black" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF981E2A" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="AliceBlue" Offset="0"/>
                <GradientStop Color="LightBlue" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Height="150" Width="1000">
            <Image x:Name="imgLogo" Source="logo.png" HorizontalAlignment="Center" VerticalAlignment="Top" Height="100"/>
            <Label x:Name="lblTitle" Content="Open Projects Dashboard" FontSize="20" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="50"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="150" Height="640" Background="LightBlue">
            <Expander x:Name="expOfficeInfo" Header="Office Info" ExpandDirection="Down" FontSize="16" Margin="10,1,1,1" Expanded="expOfficeInfo_Expanded" />            
        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="620" Width="830" Margin="158,155,6,9">
            <StackPanel Height="620" Width="415">
                <StackPanel Height="50" Width="415">
                    <Label x:Name="lblCurrentOpenProjects" Content="Current Open Projects" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="50" FontSize="18"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Height="50" Width="415">
                    <Label x:Name="lblTotalOpenProjects" Content="Total Open Projects" HorizontalAlignment="Center" HorizontalContentAlignment="Right" VerticalAlignment="Center" VerticalContentAlignment="Center" FontSize="16" Width="200"/>
                    <TextBox x:Name="txtTotalOpenProjects" IsReadOnly="True" Background="LightGray" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="40" Width="175" Margin="10,1,1,1"/>
                </StackPanel>
                <StackPanel Height="300" Width="405">
                    <wf:WindowsFormsHost x:Name="host" Height="300">
                        <winformchart:Chart x:Name="gphProjectStatus" Dock="Fill" >
                            <winformchart:Chart.Series>
                                <winformchart:Series Name="Projects" ChartType="Column"/>
                            </winformchart:Chart.Series>
                            <winformchart:Chart.ChartAreas>
                                <winformchart:ChartArea/>
                            </winformchart:Chart.ChartAreas>
                        </winformchart:Chart>
                    </wf:WindowsFormsHost>
                </StackPanel>
                <StackPanel Height="175" Width="415">
                    <DataGrid x:Name="dgrProjectStatus" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="165" Width="405" AlternationCount="1" RowBackground="AliceBlue" AlternatingRowBackground="LightBlue" Margin="1,5,1,1"/>
                </StackPanel>
                
            </StackPanel>
            <StackPanel Height="620" Width="415">
                <StackPanel Height="50" Width="415">
                    <Label x:Name="lblCurrentOverdueProjects" Content="Current Overdue Projects" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="50" FontSize="18"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Height="50" Width="415">
                    <Label x:Name="lblTotalOverdueProjects" Content="Total Overdue Projects" HorizontalAlignment="Center" HorizontalContentAlignment="Right" VerticalAlignment="Center" VerticalContentAlignment="Center" FontSize="16" Width="200"/>
                    <TextBox x:Name="txtTotalOverdueProjects" IsReadOnly="True" Background="LightGray" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="40" Width="175" Margin="10,1,1,1"/>
                </StackPanel>
                <StackPanel Height="300" Width="405">
                    <wf:WindowsFormsHost x:Name="secondhost" Height="300">
                        <winformchart:Chart x:Name="gphOverdueStatus" Dock="Fill" >
                            <winformchart:Chart.Series>
                                <winformchart:Series Name="OverdueProjects" ChartType="Column"/>
                            </winformchart:Chart.Series>
                            <winformchart:Chart.ChartAreas>
                                <winformchart:ChartArea/>
                            </winformchart:Chart.ChartAreas>
                        </winformchart:Chart>
                    </wf:WindowsFormsHost>
                </StackPanel>
                <StackPanel Height="175" Width="415">
                    <DataGrid x:Name="dgrOrderdueProjects" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="165" Width="405" AlternationCount="1" RowBackground="AliceBlue" AlternatingRowBackground="LightBlue" Margin="1,5,1,1"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
