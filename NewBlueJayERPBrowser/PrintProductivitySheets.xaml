<Page x:Class="NewBlueJayERPBrowser.PrintProductivitySheets"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NewBlueJayERPBrowser"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1000"
      Title="PrintProductivitySheets" Loaded="Page_Loaded">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="AliceBlue" Offset="0"/>
                <GradientStop Color="LightBlue" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="75" />
            <RowDefinition Height="75" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="2" Grid.RowSpan="8" Background="LightBlue">
            <!--<Expander x:Name="expLoadSavedSheet" Header="Load Saved Sheet" FontSize="16" Margin="10,1,1,1" />
            <Expander x:Name="expSaveCurrentSheet" Header="Save Current Sheet" FontSize="16" Margin="10,1,1,1" />-->
            <Expander x:Name="expPrintSheet" Header="Print Sheet" FontSize="16" Margin="10,1,1,1" Expanded="expPrintSheet_Expanded" />
            <Expander x:Name="expSelectAllTasks" Header="Select All Tasks" FontSize="16" Margin="10,1,1,1" Expanded="expSelectAllTasks_Expanded"/>
            <Expander x:Name="expResetWindow" Header="ResetWindow" FontSize="16" Margin="10,1,1,1" Expanded="expResetWindow_Expanded" /> 
        </StackPanel>
        <Label x:Name="lblTitle" Content="Print Productivity Sheets" Grid.Row="0" Grid.ColumnSpan="5" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" FontSize="25" />
        <Image x:Name="imgLogo" Grid.RowSpan="2" Source="logo.png" HorizontalAlignment="Center" VerticalAlignment="Top" Height="100" Margin="1,20,1,1"/>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="5" HorizontalAlignment="Center">
            <Label x:Name="lblSelectBusinessLine" Content="Select Business Line"  FontSize="16" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="10,1,1,1"/>
            <ComboBox x:Name="cboSelectBusinessLine" IsReadOnly="True" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="16" Height="40" Width="200" Margin="10,1,1,1" SelectionChanged="cboSelectBusinessLine_SelectionChanged"/>
            <Label x:Name="lblSelectDepartment" Content="Select Department" FontSize="16" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="10,1,1,1"/>
            <ComboBox x:Name="cboSelectDepartment" IsReadOnly="True" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="16" Height="40" Width="200" Margin="10,1,1,1" SelectionChanged="cboSelectDepartment_SelectionChanged"/>
        </StackPanel>
        <DataGrid x:Name="dgrProductionCodes" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Top" VerticalContentAlignment="Center" Margin="1,5,1,1" AlternationCount="1" RowBackground="AliceBlue" AlternatingRowBackground="LightBlue" />
    </Grid>
</Page>
